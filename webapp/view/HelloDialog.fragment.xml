<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
        <Dialog
            id="helloDialog"
            title="Hello {/repicient/name}">
            <content>
                <core:Icon 
                src="sap-icon://hello-world"
                size="8rem"
                clas="sapUiMediumMargin"/>
            </content>
            <beginButton>
                <Button text="{i18n>dialogCloseButtonText}"
                    press=".onCloseDialog">
                </Button>
            </beginButton>
        </Dialog>
</core:FragmentDefinition>